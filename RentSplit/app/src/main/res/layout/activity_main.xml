<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.vcu.cs.ramhackstemp.MainActivity">

    <TextView
        android:id="@+id/rentTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Rent Owed: "
        android:visibility="visible"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="112dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="162dp" />

    <TextView
        android:id="@+id/indRentOwed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your owed contribution: "
        android:visibility="visible"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="138dp" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickLogout"
        android:text="Logout"
        android:visibility="visible"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="385dp" />

    <Button
        android:id="@+id/btnPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickPay"
        android:text="Pay"
        android:visibility="visible"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="193dp" />

    <Button
        android:id="@+id/btnChangeTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickChangeTotal"
        android:text="Change Total Owed"
        android:visibility="visible"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="279dp" />

    <EditText
        android:id="@+id/editTotalRent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:visibility="gone"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="80dp" />
</android.support.constraint.ConstraintLayout>
